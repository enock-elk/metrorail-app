    <script>
        const NET_INCOME = 17639.13;
        const COST_ELEC = 500;
        const COST_WIFI = 625;
        const COST_ADMIN = 1500;
        
        // Added Colbyn to defaults
        let defaultAreas = ["Hatfield", "Muckleneuk", "Brooklyn", "Arcadia", "Sunnyside", "Menlo Park", "Queenswood", "Colbyn"];
        let savedAreas = JSON.parse(localStorage.getItem('custom_areas')) || [];
        let allAreas = [...new Set([...defaultAreas, ...savedAreas])].sort();
        let listings = JSON.parse(localStorage.getItem('pta_rentals_offline')) || [];
        const container = document.getElementById('listingsContainer');
        const emptyState = document.getElementById('emptyState');
        const rentInput = document.getElementById('rent');
        const depositInput = document.getElementById('deposit');
        const htmlElement = document.documentElement;

        document.addEventListener('DOMContentLoaded', () => {
            if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
                htmlElement.classList.add('dark');
            }
            updateThemeIcons();
            populateAreaDropdowns();
            renderListings();
            rentInput.addEventListener('input', (e) => { depositInput.value = e.target.value; });
        });

        function toggleTheme() {
            htmlElement.classList.toggle('dark');
            localStorage.setItem('theme', htmlElement.classList.contains('dark') ? 'dark' : 'light');
            updateThemeIcons();
        }
        function updateThemeIcons() {
            const sunIcon = document.getElementById('sun-icon');
            const moonIcon = document.getElementById('moon-icon');
            if (htmlElement.classList.contains('dark')) { sunIcon.classList.remove('hidden'); moonIcon.classList.add('hidden'); }
            else { sunIcon.classList.add('hidden'); moonIcon.classList.remove('hidden'); }
        }

        function addListing(e) {
            e.preventDefault();
            const editId = document.getElementById('edit-id').value;
            const rawRent = Number(document.getElementById('rent').value);
            const isElecIncl = document.getElementById('elecIncluded').checked;
            const isWifiIncl = document.getElementById('wifiIncluded').checked;
            const isAdminFee = document.getElementById('adminFee').checked;
            const deposit = Number(document.getElementById('deposit').value || 0);
            const notes = document.getElementById('notes').value;

            let effectiveRent = rawRent + (isElecIncl ? 0 : COST_ELEC) + (isWifiIncl ? 0 : COST_WIFI);
            let moveInCost = rawRent + deposit + (isAdminFee ? COST_ADMIN : 0);

            const formData = {
                id: editId ? Number(editId) : Date.now(),
                link: document.getElementById('link').value,
                area: document.getElementById('area').value,
                type: document.getElementById('type').value,
                rent: rawRent,
                deposit: deposit,
                elecIncluded: isElecIncl,
                wifiIncluded: isWifiIncl,
                adminFee: isAdminFee,
                closeToUp: document.getElementById('closeToUp').checked,
                notes: notes,
                effectiveRent: effectiveRent,
                moveInCost: moveInCost,
                addedAt: editId ? undefined : new Date().toISOString()
            };

            if (editId) {
                const index = listings.findIndex(l => l.id == editId);
                if (index > -1) { formData.addedAt = listings[index].addedAt; listings[index] = formData; }
                cancelEdit();
            } else { listings.push(formData); e.target.reset(); }
            saveData(); renderListings();
        }

        function startEdit(id) {
            const item = listings.find(l => l.id == id);
            if (!item) return;
            window.scrollTo({ top: 0, behavior: 'smooth' });
            document.getElementById('edit-id').value = item.id;
            document.getElementById('link').value = item.link;
            document.getElementById('area').value = item.area;
            document.getElementById('type').value = item.type;
            document.getElementById('rent').value = item.rent;
            document.getElementById('deposit').value = item.deposit;
            document.getElementById('notes').value = item.notes || "";
            document.getElementById('elecIncluded').checked = item.elecIncluded;
            document.getElementById('wifiIncluded').checked = item.wifiIncluded !== undefined ? item.wifiIncluded : false;
            document.getElementById('adminFee').checked = item.adminFee !== undefined ? item.adminFee : false;
            document.getElementById('closeToUp').checked = item.closeToUp;
            
            document.getElementById('form-card').classList.add('edit-mode-active');
            document.getElementById('form-title').innerText = "Edit Property Details";
            document.getElementById('submit-btn').innerHTML = "Update Property";
            document.getElementById('submit-btn').className = "w-full bg-orange-500 hover:bg-orange-600 text-white font-bold py-3 rounded-xl shadow-lg transition";
            document.getElementById('cancel-edit-btn').classList.remove('hidden');
        }

        function cancelEdit() {
            document.getElementById('rentalForm').reset();
            document.getElementById('edit-id').value = "";
            document.getElementById('form-card').classList.remove('edit-mode-active');
            document.getElementById('form-title').innerText = "Add New Property";
            document.getElementById('submit-btn').innerHTML = "Save Property";
            document.getElementById('submit-btn').className = "w-full bg-brand-600 hover:bg-brand-700 text-white font-bold py-3 rounded-xl shadow-lg transition";
            document.getElementById('cancel-edit-btn').classList.add('hidden');
        }

        function deleteListing(id) { if(confirm("Are you sure?")) { listings = listings.filter(l => l.id != id); saveData(); renderListings(); } }
        function saveData() { localStorage.setItem('pta_rentals_offline', JSON.stringify(listings)); }

        function renderListings() {
            container.innerHTML = '';
            const filterArea = document.getElementById('filterArea').value;
            const filterType = document.getElementById('filterType').value;
            const sortMode = document.getElementById('sortOrder').value;

            const getEffectiveRent = (item) => item.rent + (item.elecIncluded ? 0 : COST_ELEC) + ((item.wifiIncluded !== undefined ? item.wifiIncluded : false) ? 0 : COST_WIFI);
            const getMoveInCost = (item) => item.rent + item.deposit + ((item.adminFee !== undefined ? item.adminFee : false) ? COST_ADMIN : 0);

            let filtered = listings.filter(l => {
                const areaMatch = filterArea === 'all' || l.area === filterArea;
                const typeMatch = filterType === 'all' || l.type === filterType;
                return areaMatch && typeMatch;
            });

            filtered.sort((a, b) => {
                if (sortMode === 'priceAsc') return getEffectiveRent(a) - getEffectiveRent(b);
                if (sortMode === 'priceDesc') return getEffectiveRent(b) - getEffectiveRent(a);
                if (sortMode === 'moveInAsc') return getMoveInCost(a) - getMoveInCost(b);
                if (sortMode === 'dateNew') return new Date(b.addedAt) - new Date(a.addedAt);
                return 0;
            });

            document.getElementById('countDisplay').innerText = filtered.length;
            if (filtered.length === 0) emptyState.classList.remove('hidden'); else emptyState.classList.add('hidden');

            filtered.forEach(item => {
                const wifiIncl = item.wifiIncluded !== undefined ? item.wifiIncluded : false;
                const adminFee = item.adminFee !== undefined ? item.adminFee : false;
                let effectiveRent = getEffectiveRent(item);
                let moveInTotal = getMoveInCost(item);
                let badgeClass = "", badgeText = "", badgeIcon = "";
                if (effectiveRent <= 5292) { badgeClass = "bg-green-100 text-green-700 border-green-200 dark:bg-green-900/30 dark:text-green-300 dark:border-green-800"; badgeText = "Affordable"; badgeIcon = "‚úÖ"; }
                else if (effectiveRent <= 6200) { badgeClass = "bg-yellow-100 text-yellow-700 border-yellow-200 dark:bg-yellow-900/30 dark:text-yellow-300 dark:border-yellow-800"; badgeText = "Stretch"; badgeIcon = "‚ö†Ô∏è"; }
                else { badgeClass = "bg-red-100 text-red-700 border-red-200 dark:bg-red-900/30 dark:text-red-300 dark:border-red-800"; badgeText = "High Risk"; badgeIcon = "üõë"; }

                const el = document.createElement('div');
                el.className = 'bg-white dark:bg-gray-800 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 p-0 overflow-hidden transition-all hover:shadow-md dark:hover:border-gray-600 group';
                el.innerHTML = `
                    <div class="p-5 flex flex-col md:flex-row gap-5 justify-between">
                        <div class="flex-1">
                            <div class="flex items-center gap-2 mb-3 flex-wrap">
                                <span class="${badgeClass} border text-[10px] font-bold px-2 py-1 rounded-full uppercase tracking-wide flex items-center gap-1">${badgeIcon} ${badgeText}</span>
                                <span class="bg-slate-100 dark:bg-gray-700 text-slate-600 dark:text-gray-300 border border-slate-200 dark:border-gray-600 px-2 py-1 rounded-full text-[10px] font-bold uppercase tracking-wide">${item.area}</span>
                                <span class="bg-slate-100 dark:bg-gray-700 text-slate-600 dark:text-gray-300 border border-slate-200 dark:border-gray-600 px-2 py-1 rounded-full text-[10px] font-bold uppercase tracking-wide">${item.type}</span>
                                ${item.closeToUp ? '<span class="bg-brand-50 dark:bg-brand-900/20 text-brand-700 dark:text-brand-300 border border-brand-100 dark:border-brand-800 px-2 py-1 rounded-full text-[10px] font-bold uppercase tracking-wide flex items-center gap-1">üéì Near UP</span>' : ''}
                            </div>
                            <div class="flex items-baseline gap-2"><span class="text-3xl font-bold text-slate-800 dark:text-white tracking-tight">R ${effectiveRent.toLocaleString()}</span><span class="text-xs text-slate-400 dark:text-gray-500 font-medium uppercase tracking-wide">/mo (Effective)</span></div>
                            <div class="mt-3 text-xs text-slate-500 dark:text-gray-400 bg-slate-50 dark:bg-gray-700/50 p-3 rounded-lg border border-slate-100 dark:border-gray-700 grid grid-cols-2 gap-y-1 gap-x-4 max-w-md">
                                <span class="text-slate-400 dark:text-gray-500">Base Rent:</span><span class="font-bold text-slate-700 dark:text-gray-200 text-right">R ${item.rent.toLocaleString()}</span>
                                <span class="text-slate-400 dark:text-gray-500">Electricity:</span><span class="text-right">${item.elecIncluded ? '<span class="text-green-600 dark:text-green-400 font-bold">Included</span>' : '<span class="text-orange-500 font-medium">+ R500 (Est)</span>'}</span>
                                <span class="text-slate-400 dark:text-gray-500">WiFi:</span><span class="text-right">${wifiIncl ? '<span class="text-green-600 dark:text-green-400 font-bold">Included</span>' : '<span class="text-brand-500 dark:text-brand-400 font-medium">+ R625 (Rain)</span>'}</span>
                            </div>
                            ${item.notes ? `<div class="mt-3 text-xs text-slate-500 dark:text-gray-400 italic bg-yellow-50 dark:bg-yellow-900/20 p-2 rounded border border-yellow-100 dark:border-yellow-800/30">üìù ${item.notes}</div>` : ''}
                            <div class="mt-4 flex gap-3">
                                <a href="${item.link}" target="_blank" class="bg-slate-800 hover:bg-slate-900 dark:bg-gray-700 dark:hover:bg-gray-600 text-white text-xs font-bold py-2 px-4 rounded-lg transition inline-flex items-center gap-1.5 shadow-sm">View Listing <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg></a>
                                <button onclick="startEdit('${item.id}')" class="bg-orange-50 hover:bg-orange-100 dark:bg-orange-900/20 dark:hover:bg-orange-900/40 text-orange-600 dark:text-orange-400 border border-orange-200 dark:border-orange-800 text-xs font-bold py-2 px-4 rounded-lg transition inline-flex items-center gap-1.5">Edit Details</button>
                            </div>
                        </div>
                        <div class="flex flex-row md:flex-col justify-between items-end border-t md:border-t-0 pt-4 md:pt-0 mt-2 md:mt-0 md:pl-6 md:border-l border-slate-100 dark:border-gray-700 min-w-[140px]">
                             <div class="text-right"><div class="text-[10px] text-slate-400 dark:text-gray-500 uppercase font-bold tracking-wider mb-1">Total Move-in Cost</div><div class="text-2xl font-bold text-slate-800 dark:text-white tracking-tight">R ${moveInTotal.toLocaleString()}</div><div class="text-[10px] text-slate-400 dark:text-gray-500 mt-1 flex flex-col items-end gap-0.5"><span>Rent: R${item.rent.toLocaleString()}</span><span>Dep: R${item.deposit.toLocaleString()}</span>${adminFee ? '<span class="text-red-400 font-medium">+ Admin: R1500</span>' : '<span class="text-green-500 dark:text-green-400">No Admin Fee</span>'}</div></div>
                            <button onclick="deleteListing('${item.id}')" class="text-slate-300 dark:text-gray-600 hover:text-red-500 dark:hover:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 p-2 rounded-lg transition mt-4" title="Delete Property"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg></button>
                        </div>
                    </div>`;
                container.appendChild(el);
            });
        }

        function populateAreaDropdowns() {
            const areaSelect = document.getElementById('area');
            const filterSelect = document.getElementById('filterArea');
            const makeOpts = (isFilter) => {
                let html = isFilter ? '<option value="all">All Areas</option>' : '';
                allAreas.forEach(area => html += `<option value="${area}">${area}</option>`);
                return html;
            }
            areaSelect.innerHTML = makeOpts(false);
            filterSelect.innerHTML = makeOpts(true);
        }
        function promptNewArea() {
            const newArea = prompt("New Area Name:");
            if (newArea) { savedAreas.push(newArea); localStorage.setItem('custom_areas', JSON.stringify(savedAreas)); allAreas.push(newArea); populateAreaDropdowns(); }
        }
        function exportCSV() {
            if (listings.length === 0) return alert("No data!");
            let csv = "Date,Area,Type,Base Rent,Effective Rent,Move In Cost,Elec Incl,Wifi Incl,Admin Fee,Notes,Link\n";
            listings.forEach(l => {
                const wifi = l.wifiIncluded ? "Yes" : "No"; const elec = l.elecIncluded ? "Yes" : "No"; const admin = l.adminFee ? "Yes" : "No";
                let eff = l.rent + (l.elecIncluded ? 0 : COST_ELEC) + (l.wifiIncluded ? 0 : COST_WIFI);
                let move = l.rent + l.deposit + (l.adminFee ? COST_ADMIN : 0);
                csv += `${new Date(l.addedAt).toLocaleDateString()},${l.area},${l.type},${l.rent},${eff},${move},${elec},${wifi},${admin},"${l.notes || ''}",${l.link}\n`;
            });
            const link = document.createElement("a"); link.href = "data:text/csv;charset=utf-8," + encodeURI(csv); link.download = "rental_tracker.csv"; link.click();
        }
        function downloadBackup() { const data = "data:text/json;charset=utf-8," + encodeURIComponent(JSON.stringify(listings)); const a = document.createElement('a'); a.href = data; a.download = "rental_backup.json"; a.click(); }
        function importBackup(input) {
            const file = input.files[0]; const reader = new FileReader();
            reader.onload = (e) => { const data = JSON.parse(e.target.result); if(Array.isArray(data)) { if(confirm(`Restore ${data.length} items? This replaces current list.`)) { listings = data; saveData(); renderListings(); } } };
            reader.readAsText(file);
        }
    </script>
</body>
</html>
